               Stretch="UniformToFill"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"/>
        <Canvas x:Name="arkapanel">
            <Rectangle x:Name="sec"
                       Stroke="DarkOrange"
                       Visibility="Collapsed"
                       Fill='#77FFFFFF'></Rectangle>
        </Canvas>

    </Grid>
</Window>
